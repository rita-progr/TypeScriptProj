{
  "compilerOptions": {
    "types": ["jest", "@testing-library/jest-dom"],
    "outDir": "./dist/",
    "noImplicitAny": true,
    "lib": ["es2017", "dom"],
    "module": "ESNext",
    "target": "es2017",
    "strict": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "entities/*": ["./src/entities/*"],
      "app/*": ["./src/app/*"],
      "shared/*": ["./src/shared/*"],
      "widgets/*": ["./src/widgets/*"],
      "pages/*": ["./src/pages/*"],
      "features/*": ["./src/features/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./config/jest/setUpTests.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "stories"
  ]
}